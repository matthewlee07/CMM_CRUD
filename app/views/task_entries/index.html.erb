<% provide(:title, 'All Task Entries') %>
<div class="container resources-container">
  <h1>All Task Entries</h1>
  <%= render 'shared/paginate', :@profile => @task_entries%>
    <ul class="resources">
      <% @task_entries.each do |task_entry| %>
        <li>
          <%= link_to task_entry.note, task_entry %>
        </li>
        <li> duration: 
          <%= task_entry.duration%>
        </li>
        <%= form_for(task_entry, url: task_entry_start_path(task_entry), method: :put) do |f|%>
          <% f.submit "Start Time", class:"btn btn-primary sm"%>
        <% end%>
        <%= form_for(task_entry, url: task_entry_stop_path(task_entry), method: :put) do |f|%>
          <% f.submit "Stop Time", class:"btn btn-primary sm"%>
        <% end%>
      <% end %>
    </ul>
  <%= render 'shared/paginate', :@profile => @task_entries%>
  <div class="center">
    <%= link_to "Create Task Entry", task_entries_new_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>